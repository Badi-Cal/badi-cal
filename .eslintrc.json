{
  "plugins": [
    "import",
    "promise"
  ],
  "rules": {
    "import/no-named-default": "warn"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:promise/recommended"
  ],
  "settings": {
    "import/ignore": [
      ".(scss|less|css)$"
    ],
    "import/extensions": [".mjs", ".js"],
    "import/resolver": {
      "node": {"extension": [".js", ".mjs"] }
    }
  },
  "globals": {
    "document": "readonly",
    "navigator": "readonly",
    "window": "readonly"
  }
}